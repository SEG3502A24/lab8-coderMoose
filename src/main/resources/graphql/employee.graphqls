type Query {
    employees: [Employee]
    employeeById(id: String!): Employee
    employeeByName(name: String!): Employee
}

type Employee {
    id: String!
    name: String!
    dateOfBirth: String!
    city: String!
    salary: Float!
    gender: String
    email: String
}

input CreateEmployeeInput {
    name: String,
    dateOfBirth: String,
    city: String,
    salary: Float,
    gender: String,
    email: String
}

type Mutation {
    newEmployee(createEmployeeInput: CreateEmployeeInput!) : Employee!
    deleteEmployee(employeeId: ID!) : Boolean
    updateEmployee(employeeId: ID!, createEmployeeInput: CreateEmployeeInput!) : Employee!
}
